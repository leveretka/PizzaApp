<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean name="pizzaRepository" 
			class="com.mycompany.pizzapp.repository.TestPizzaRepository" init-method="init"/>
	<bean name="orderRepository" 
			class="com.mycompany.pizzapp.repository.TestOrderRepository"/>
	
	<bean name="orderService"
			class ="com.mycompany.pizzapp.service.SimpleOrderService">
			<constructor-arg ref="pizzaRepository"/>
			<constructor-arg ref="orderRepository"/>
	</bean>


</beans>
